{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://u-me-chat-app.onrender.com/api/:path*"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "https://u-me-chat-app.onrender.com/socket.io/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}